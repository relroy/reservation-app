<div class="container-fluid">
  <h1>Edit Group Information for  </h1>
<!-- should this edit a join table w/ user info instead?!  -->

<%= form_tag("/groups/#{@group.id}", :method => :patch) do %>

  <div class="field">
    <%= label_tag :boat_id %><br />
    <%= text_field_tag :boat_id, @group.boat_id, :required => true %>
  </div>

  <div class="field">
    <%= label_tag :credits %><br />
    <%= text_field_tag :credits, @group.credits, :required => true %>
  </div>

  <div class="field">
    <%= label_tag :full_share %><br />
    <%= text_field_tag :full_share, @group.full_share %>
  </div>

  <div class="field">
    <%= label_tag :two_thirds_share %><br />
    <%= text_field_tag :two_thirds_share, @group.two_thirds_share %>
  </div>

  
  <div class="actions">
    <%= submit_tag "Submit Changes", :class => "submit_group_changes" %>
  </div>
<% end %>



<%= link_to "Back", :back %>


</div>