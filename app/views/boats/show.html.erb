<div class="container-fluid">
<h1><%=@boat.name%></h1>
<img src="<%=@boat.image_url%>" width="250" class="img-thumbnail">
    <h2>Lease Rates</h2>
  <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th class="bg-primary">Full Share </th>
        <th class="bg-primary">2/3rd Share </th>
      </tr>
    </thead>
    <tr>
      <td><%= @boat.full_credits_total %> Credits</td>
      <td><%= @boat.two_thirds_credits_total %> Credits</td>
    </tr>
    <tr>
      <td>$<%=@boat.full_share_price%>0</td>
      <td>$<%=@boat.two_thirds_share_price%>0</td>
    </tr>
  </table>
  <h3>Leases available for <%=@boat.name%>: <%=@boat.shares_possible %></h3>
  <% if  user_signed_in? && current_user.allowed? %>
  <button><a href="/reservations/<%= current_user.group.id %>">Reserve</a></button>
  <% end %>
  <br>
  <h2>Credit Rates</h2>
  <h4>Day Block: 9 a.m. - 3 p.m.</h4>
  <h4>Evening Block: 4 p.m. - 8 a.m. next morning</h4>
  <h4>Full Day Block: 9 a.m. - 8 a.m. next morning</h4>
  <table class="table table-striped table-bordered table-responsive">
    <tr >
      <th class="bg-primary">Time Blocks</th>
      <th class="bg-primary">Sunday</th>
      <th class="bg-primary">Monday - Thursday</th>
      <th class="bg-primary">Friday</th>
      <th class="bg-primary">Saturday</th>
    </tr>
    <tr>
      <td>Day Block</td>
      <td><%=@boat.half_credit_AM_SUN%></td>
      <td><%=@boat.half_credit_AM_MTWTh%></td>
      <td><%=@boat.half_credit_AM_F%></td>
      <td><%=@boat.half_credit_AM_SAT%></td>
    </tr>
    <tr>
      <td>Evening Block</td>
      <td><%=@boat.half_credit_PM_SUN%></td>
      <td><%=@boat.half_credit_PM_MTWTh%></td>
      <td><%=@boat.half_credit_PM_F%></td>
      <td><%=@boat.half_credit_PM_SAT%></td>
    </tr>
    <tr>
      <td>Full Day</td>
      <td><%=@boat.full_credit_SUN%></td>
      <td><%=@boat.full_credit_MTWTh%></td>
      <td><%=@boat.full_credit_F%></td>
      <td><%=@boat.full_credit_SAT%></td>
    </tr>
  </table>
 
    <% if user_signed_in? && current_user.admin? %>
  <button><a href="/boats/<%= @boat.id %>/edit">Edit</a></button> <button><a href="/boats/<%= @boat.id %>" data-method="delete" rel="nofollow" data-confirm="Are you sure?">Delete</a></button>
  <br>
   <br>

  <% end %>
</div>


