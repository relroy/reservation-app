<div class="container-fluid">
  
  <center><h1><%=@user.group.boat.name%></h1>
<img src="<%=@user.group.boat.image_url%>" width="250" class="img-thumbnail"></center><br>
  <!-- More information needed here -->
  <table class= "table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th class= "bg-primary">Name</th>
        <th class= "bg-primary">Members</th>
        <th class= "bg-primary">Member Since</th>
        <th class= "bg-primary">Boat Captain</th>
        <th class= "bg-primary">Credits available</th>
        <th class= "bg-primary">Credits Used</th>
        <th class= "bg-primary">Boat</th>
        <th class= "bg-primary">Boat Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.first_name %> <%= @user.last_name %></td>
        <td>
          <% @user.group.users.each do |user| %>
          <p><%= user.first_name %> <%= user.last_name %></p>
          <%end %>
        </td>
        <td><%= @user.created_at.strftime("%Y") %></td>
        <td><%= @user.group.captain %></td>
        <td><%= @user.group.credits %></td>
        <td><%= @user.group.credits_used %></td>
        <td><%= @user.group.boat.name %></td>
        <td><%= @user.group.boat.current_status %></td>

      </tr>
    </tbody>
  </table>

  <table class= "table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th class= "bg-primary">Date Reserved for</th>
        <th class= "bg-primary">Time Block</th>
        <th class= "bg-primary">Reservation Created On</th>
      </tr>
    </thead>
    <tbody>
        <% @user.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date_reserved.strftime("%A, %D") %></td>
        <% if reservation.am_block? %>
           <td>Reserved for the AM Block</td>
          <% elsif reservation.pm_block? %>
            <td>Reserved for the PM Block</td>
          <% elsif reservation.full_day_block? %>
            <td>Reserved for the Full Day</td>
          <% end %> 
        <td><%= reservation.created_at.strftime("%A, %D") %></td> 
        <% end %>      
      </tr>
    </tbody>
  </table>
</div>