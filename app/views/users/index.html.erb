<div class="container-fluid">
<h1> ALL Users</h1>
<!--  -->
<%= form_tag '/search', class: "navbar-form navbar-right" do %>
    <div class="form-group">
      <%= text_field_tag :group_id, nil, class: "form-control", placeholder: "search here" %>
    </div>
    <%= submit_tag 'Search', class: "btn" %>
     
    <% end %>
    <!--  -->

    <table class="table table-striped table-bordered table-responsive">
      <thead>
        <tr>
          <th class="bg-primary">Name</th>
          <th class="bg-primary">Address</th>
          <th class="bg-primary">Phone #</th>
          <th class="bg-primary">Assigned Boat</th>
          <th class="bg-primary">Full Share</th>
          <th class="bg-primary">2/3rd Share</th>
          <th class="bg-primary">Group ID #</th>
        </tr>
      </thead>
  <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><a href="/users/<%= user.id %>/edit"><%= user.first_name %> <%= user.last_name %></a></td>
          <td><%= user.address %> <%= user.city %>, <%= user.state %> <%= user.zip_code %></td>
          <td><%= user.phone %></td>
          <td><%= user.boat_assigned %></td>
          <td><%= user.full_share %></td>          
          <td><%= user.two_thirds_share %></td>
          <td><%= user.group_id %></td>
        
        </tr>
      </tbody>
  <% end %>

    </table>

</div>